<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/acÄ±kmavi">

    <TextView
        android:id="@+id/tvTeacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/civTeacher"
        android:text="Teacher Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/koyuyesil"
        android:layout_marginBottom="5dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@id/civTeacher"
        android:src="@drawable/defaultprofil"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/ivTeacherDelete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageView
        android:id="@+id/ivTeacherEdit"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/ivTeacherDelete"
        android:layout_marginEnd="12dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />
</RelativeLayout>